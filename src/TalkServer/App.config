<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    <section name="akka" type="Akka.Configuration.Hocon.AkkaConfigurationSection, Akka" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
  </startup>
  <common>
    <logging>
      <factoryAdapter type="Common.Logging.NLog.NLogLoggerFactoryAdapter, Common.Logging.NLog41">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
    </logging>
  </common>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="Console" xsi:type="ColoredConsole" layout="${date}|${logger}|${message}|${exception:format=tostring}" />
    </targets>
    <rules>
      <logger name="*" minlevel="Trace" writeTo="Console" />
    </rules>
  </nlog>
  <akka>
    <hocon>
      <![CDATA[
        system {
          name = ChatCluster
          runner {
            default = [
              { port = 3001, roles = [ "RoomTable", "UserTable", "Room", [ "User", { port = 9001 } ], "Bot" ] }
            ]
            cluster = [
              { port = 3001, roles = [ "RoomTable" ] }
              { port = 3002, roles = [ "UserTable" ] }
              { port = 3011, roles = [ "Room" ] }
              { port = 3012, roles = [ "Room" ] }
              { port = 3021, roles = [ [ "User", { port = 9001 } ] ] }
              { port = 3022, roles = [ [ "User", { port = 9002 } ] ] }
              { port = 3031, roles = [ "Bot", "User" ] }
            ]
          }
        }
        akka {
          actor {
            provider = "Akka.Cluster.ClusterActorRefProvider, Akka.Cluster"
            serializers {
              wire = "Akka.Serialization.WireSerializer, Akka.Serialization.Wire"
              proto = "Akka.Interfaced.ProtobufSerializer.ProtobufSerializer, Akka.Interfaced.ProtobufSerializer"
            }
            serialization-bindings {
              "Akka.Interfaced.NotificationMessage, Akka.Interfaced-Base" = proto
              "Akka.Interfaced.RequestMessage, Akka.Interfaced-Base" = proto
              "Akka.Interfaced.ResponseMessage, Akka.Interfaced-Base" = proto
              "System.Object" = wire
            }
          }
          remote {
            helios.tcp {
              hostname = "127.0.0.1"
              port = 3001
            }
          }
          cluster {
            seed-nodes = ["akka.tcp://ChatCluster@127.0.0.1:3001"]
            auto-down-unreachable-after = 30s
          }
        }
      ]]>
    </hocon>
  </akka>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Newtonsoft.Json" publicKeyToken="30ad4fe6b2a6aeed" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-8.0.0.0" newVersion="8.0.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
</configuration>
